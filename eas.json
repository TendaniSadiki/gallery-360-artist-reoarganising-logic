{
  "cli": {
    "version": ">= 5.2.0"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal"
    },
    "production": {
      "env": {
        "EXPO_NO_DEV": "true",
        "EXPO_USE_NPM_INSTALL": "true",
        "NPM_CONFIG_LEGACY_PEER_DEPS": "true"  // Add this line to bypass peer dependency conflicts
      }
    }
  },
  "submit": {
    "production": {}
  }
}
